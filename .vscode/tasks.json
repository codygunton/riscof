{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build r0vm",
            "type": "shell",
            "command": "unset ARGV0 && cd ${workspaceFolder}/emulators/risc0 && cargo build -p risc0-r0vm",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false,
                "clear": true,
                "close": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
} 